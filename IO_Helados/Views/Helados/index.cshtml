@model IEnumerable<IO_Helados.Models.Helados>

@{
    ViewBag.Title = "index";
}
<div style="padding-top:100px" > <h2>Lista de Helados</h2> </div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="background-color:white" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idHelado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idHelado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.idHelado }) |
            @Html.ActionLink("Details", "Details", new {  id=item.idHelado }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.idHelado })
        </td>
    </tr>
}

</table>
